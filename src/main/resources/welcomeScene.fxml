<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Tooltip?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.WelcomeSceneController">
   <children>
      <Label alignment="TOP_CENTER" layoutX="2.0" layoutY="17.0" prefHeight="18.0" prefWidth="261.0" text="Добро пожаловать в Лото!" textFill="#15ac1d">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <Label layoutX="24.0" layoutY="62.0" text="Игрок 1" />
      <TextField fx:id="player1TextField" promptText="Введите имя (1-15 букв)" layoutX="83.0" layoutY="59.0" prefHeight="26.0" prefWidth="146.0">
         <tooltip>
            <Tooltip text="Имя должно содержать только буквы и быть от 1 до 15 символов" />
         </tooltip>
         <padding>
            <Insets left="5.0" right="10.0" />
         </padding></TextField>
      <Label fx:id="player1ErrorLabel" layoutX="83" layoutY="84" visible="false" text="Invalid name!" textFill="red" />
      <Label layoutX="23.0" layoutY="110.0" text="Игрок 2" />
      <TextField fx:id="player2TextField" promptText="Введите имя (1-15 букв)" layoutX="83.0" layoutY="106.0" prefHeight="26.0" prefWidth="146.0">
         <tooltip>
            <Tooltip text="Имя должно содержать только буквы и быть от 1 до 15 символов" />
         </tooltip>
         <padding>
            <Insets left="5.0" right="10.0" />
         </padding></TextField>
      <Label fx:id="player2ErrorLabel" layoutX="83" layoutY="131" visible="false" text="Invalid name!" textFill="red" />
      <Button layoutX="83.0" layoutY="154.0" onAction="#startGame" prefHeight="26.0" prefWidth="117.0" text="Начать игру" />
    </children>
   <padding>
      <Insets right="15.0" top="15.0" />
   </padding>
</AnchorPane>
